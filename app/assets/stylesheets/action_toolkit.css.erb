.zipcode-form {
  display: none;
}

#map-canvas {
  height: 100%;
  width: 100%;
  margin-top: 110px;
  margin: auto;
  padding-top: 10px;
  position:absolute;
  left: 0;
  bottom: 0;
}

.orgsWrapper {
  height: 100px;
  padding: 10px 10px 0 10px;
  z-index: 99;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  background-color: black;
  color: white;
}

.orgsWrapper h1 {
  margin-top: 40px;
}

.rerenderMap {
  position: absolute;
  top: 10px;
  left: 10px;
}

.gm-style-iw {
  max-height:100%;
  overflow-y:auto;
}

.contactInfo {
  margin: 0 auto;
}

.legislators-contact-info textarea {
  display: block;
  height: 4em;
  font-size: .9em;
}

.legislators-contact-info h2 {
  line-height: 0px;
  margin-top: 36px;
}

.web-form-list tr {
  height: 110px;
}

.bar {
  background-color: black;
  height: 58px;
  width: 100%;
  position: absolute;
  top: 0;
  left: 0;
}

.contactResultsContainer {
  margin: 25px 5%;
}

.contactResultsContainer h1 {
  color: white;
  position: relative;
  line-height: 0px;
  z-index: 100;
}

.contactWrapper {
  margin-top: 50px;
}

p.contactIntro {
  font-size: 20px;
  line-height: 32px;
}

.contactResultsContainer a#findByZipcode {
  text-decoration: none;
  border: none;
  border-radius: 6px;
  background-color: rgba(218,33,50,0.9);
  padding:8px;
  color: rgba(254,254,254,0.9);
  position: absolute;
  top: 10px;
  right: 5%
}

.contactResultsContainer a.web-form-link {
  text-decoration: none;
  border: none;
  border-radius: 4px;
  background-color: gray;
  padding:4px 6px;
  color: white;
}

.tweetBox h2 {
  margin: 10px 0;
  padding-bottom: 10px;
  border-bottom: solid #ccc 2px;
  line-height: 24px;
  color: rgba(35, 43, 41, 0.9);
}

.tweetBox {
  text-decoration: none;
  border: none;
  border-radius: 8px;
  background-color: rgba(35, 43, 41, 0.1);
  padding:10px;
  color: black;
  width: 30%;
  float: left;
}

.tweetBox table {
  width: 100%;
  color: rgba(35, 43, 41, 0.9);
}

.webFormBox h2 {
  margin: 10px 0;
  padding-bottom: 10px;
  border-bottom: solid #ccc 2px;
  line-height: 24px;
  color: rgba(35, 43, 41, 0.9);
}

.webFormBox {
  text-decoration: none;
  border: none;
  border-radius: 8px;
  background-color: rgba(35, 43, 41, 0.1);
  padding:10px;
  color: black;
  width: 60%;
  float: right;
}

.webFormBox table {
  width: 100%;
}

.webFormBox textarea {
  width: 98%;
  color: rgba(35, 43, 41, 0.9);
  border: 1px solid #ccc;
  padding: 6px;
  line-height: 1.3em;
}

/* ---------------------Location Admin Styles ------------------------*/

.locationContainer {
  margin: 100px 10%;
}

.locationContainer th {
  text-align: left;
}

.locationContainer td {
  padding: 2px 12px 2px 0;
  text-align: left;
}

.locationUtilities {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  background-color: black;
}

.locationUtilities li {
  list-style-type: none;
  display: inline;
  margin-left: 10px;
}

.locationUtilities a {
  color: white;
  text-decoration: none;
}

.locationForm label {
  display: inline-block;
  width: 150px;
  text-align: right;
}

.locationForm input {
  display: inline-block;
  width: 250px;
}

input#location_city {
  display: inline-block;
  width: 175px;
}

input#location_state {
  display: inline-block;
  width: 50px;
}

input#location_zipcode {
  display: inline-block;
  width: 75px;
}

.locationForm textarea {
  width: 400px;
  height: 5em;
}